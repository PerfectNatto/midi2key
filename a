jobject gHandler = env->NewGlobalRef(handlerObj);

    JavaVM* jvm; env->GetJavaVM(&jvm);

    auto pump = new BufferPump(
        [=]() {         // 値キャプチャのみ
            // ★ JVM へアタッチ
            JNIEnv* e; jvm->AttachCurrentThread(&e, nullptr);
            // ここで gHandler に対して CallVoidMethod など
            io.read(frames, dst);
        },
        [=]() {
            JNIEnv* e; jvm->AttachCurrentThread(&e, nullptr);
            io.write(frames, dst);
        }
    );
