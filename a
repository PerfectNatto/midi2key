# libpthreadpool.a の所在
set(PTHREADPOOL_LIB "${CMAKE_SOURCE_DIR}/third_party/pthreadpool/build/libpthreadpool.a")
set(PTHREADPOOL_INC "${CMAKE_SOURCE_DIR}/third_party/pthreadpool/include")

add_library(pthreadpool STATIC IMPORTED GLOBAL)

# ★Debug/Release の両方を同じファイルに向ける例
set_target_properties(pthreadpool PROPERTIES
    IMPORTED_LOCATION            "${PTHREADPOOL_LIB}"          # 共通指定でも可
    IMPORTED_LOCATION_DEBUG      "${PTHREADPOOL_LIB}"
    IMPORTED_LOCATION_RELEASE    "${PTHREADPOOL_LIB}"
    IMPORTED_CONFIGURATIONS      "DEBUG;RELEASE"
    INTERFACE_INCLUDE_DIRECTORIES "${PTHREADPOOL_INC}"
)
